<?define Publisher="Zachary Kniebel" ?>
<!-- Software version -->
<?define Version="1.3.1" ?>
<!-- Guid value unique to each version (necessary for upgrades) -->
<?define VersionGuid="54a32152-d242-4856-a5d0-349d11d1fcf8" ?>
