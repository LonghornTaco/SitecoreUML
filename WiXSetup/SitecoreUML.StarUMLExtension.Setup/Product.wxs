    <UIRef Id="WixUI_Minimal" />
	  <UIRef Id="WixUI_ErrorProgressText" />
    
	  <Property Id="WIXUI_INSTALLDIR" Value="INSTALLDIR" />

	  <WixVariable Id="WixUILicenseRtf" Value="..\..\StarUML_Extension\SitecoreUML\LICENSE.rtf" />
