<?xml version="1.0" encoding="utf-8" ?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <commands>
      <command name="sitecoreuml:import" type="ZacharyKniebel.Feature.SitecoreUML.Shell.Framework.Commands.ImportTemplates, ZacharyKniebel.Feature.SitecoreUML"/>
      <command name="sitecoreuml:export" type="ZacharyKniebel.Feature.SitecoreUML.Shell.Framework.Commands.ExportTemplates, ZacharyKniebel.Feature.SitecoreUML"/>
    </commands>
    
    <!-- TODO: Move folder-paths to settings to enable use of Sitecore variables-->
    <sitecoreUML type="ZacharyKniebel.Feature.SitecoreUML.Configuration.SitecoreUMLConfiguration, ZacharyKniebel.Feature.SitecoreUML">
      <!-- The name of the database to import data into and export data from -->
      <targetDatabaseName>master</targetDatabaseName>
      <!-- Path to the root folder that contains all templates to be imported or exported -->
      <templatesRootPath>/sitecore/templates/user defined</templatesRootPath>
      <!-- Field section name to be created by default on all imported templates -->
      <defaultFieldSectionName>Data</defaultFieldSectionName> 
      <!-- Path to folder where template data to be imported into Sitecore should be dropped -->
      <importDropFolderPath>C:/inetpub/wwwroot/SitecoreUML/Data/SitecoreUML/Import</importDropFolderPath>
      <!-- Path to folder where old template data files will be archived (if "keepFilesAfterImport" is [true]) -->
      <importHistoryFolderPath>C:/inetpub/wwwroot/SitecoreUML/ImportHistory</importHistoryFolderPath>
      <!-- Determines whether or not import data files should be archived after import; if [false] files are deleted -->
      <deleteFilesAfterImport>false</deleteFilesAfterImport>
      <!-- Controls whether or not indexing should be disabled during import (recommended for performance) -->
      <disableIndexingDuringImport>true</disableIndexingDuringImport>
      <!-- Path to the folder where exported template data files will be saved -->
      <exportSaveFolderPath>C:/inetpub/wwwroot/SitecoreUML/Data/SitecoreUML/Export</exportSaveFolderPath>
      <!-- Maps the Sitecore field type names to the field type names used in the UML -->
      <fieldTypes hint="raw:AddFieldType">
        <!-- Simple Types -->
        <fieldType sitecoreFieldTypeName="Checkbox" umlFieldTypeName="Checkbox" />
        <fieldType sitecoreFieldTypeName="Date" umlFieldTypeName="Date" />
        <fieldType sitecoreFieldTypeName="Datetime" umlFieldTypeName="Datetime" />
        <fieldType sitecoreFieldTypeName="File" umlFieldTypeName="File" />
        <fieldType sitecoreFieldTypeName="Image" umlFieldTypeName="Image" />
        <fieldType sitecoreFieldTypeName="Rich Text" umlFieldTypeName="Rich Text" />
        <fieldType sitecoreFieldTypeName="Single-Line Text" umlFieldTypeName="Single-Line Text" />
        <fieldType sitecoreFieldTypeName="Word Document" umlFieldTypeName="Word Document" />
        <fieldType sitecoreFieldTypeName="Multi-Line Text" umlFieldTypeName="Multi-Line Text" />
        <!-- List Types -->
        <fieldType sitecoreFieldTypeName="Checklist" umlFieldTypeName="Checklist" />
        <fieldType sitecoreFieldTypeName="Droplist" umlFieldTypeName="Droplist" />
        <fieldType sitecoreFieldTypeName="Grouped Droplink" umlFieldTypeName="Grouped Droplink" />
        <fieldType sitecoreFieldTypeName="Grouped Droplist" umlFieldTypeName="Grouped Droplist" />
        <fieldType sitecoreFieldTypeName="Multilist" umlFieldTypeName="Multilist" />
        <fieldType sitecoreFieldTypeName="Multilist with Search" umlFieldTypeName="Multilist with Search" />
        <fieldType sitecoreFieldTypeName="Name Value List" umlFieldTypeName="Name Value List" />
        <fieldType sitecoreFieldTypeName="Name Lookup Value List" umlFieldTypeName="Name Lookup Value List" />
        <fieldType sitecoreFieldTypeName="Treelist" umlFieldTypeName="Treelist" />
        <fieldType sitecoreFieldTypeName="Treelist with Search" umlFieldTypeName="Treelist with Search" />
        <fieldType sitecoreFieldTypeName="TreelistEx" umlFieldTypeName="TreelistEx" />
        <!-- Link Types -->
        <fieldType sitecoreFieldTypeName="Droplink" umlFieldTypeName="Droplink" />
        <fieldType sitecoreFieldTypeName="Droptree" umlFieldTypeName="Droptree" />
        <fieldType sitecoreFieldTypeName="General Link" umlFieldTypeName="General Link" />
        <fieldType sitecoreFieldTypeName="General Link with Search" umlFieldTypeName="General Link with Search" />
        <fieldType sitecoreFieldTypeName="Version Link" umlFieldTypeName="Version Link" />
        <!-- Developer Types -->
        <fieldType sitecoreFieldTypeName="Frame" umlFieldTypeName="Frame" />
        <fieldType sitecoreFieldTypeName="Rules" umlFieldTypeName="Rules" />
        <!-- System Types -->
        <fieldType sitecoreFieldTypeName="Datasource" umlFieldTypeName="Datasource" />
        <fieldType sitecoreFieldTypeName="Custom" umlFieldTypeName="Custom" />
        <fieldType sitecoreFieldTypeName="Internal Link" umlFieldTypeName="Internal Link" />
        <fieldType sitecoreFieldTypeName="Layout" umlFieldTypeName="Layout" />
        <fieldType sitecoreFieldTypeName="Template Field Source" umlFieldTypeName="Template Field Source" />
        <fieldType sitecoreFieldTypeName="File Drop Area" umlFieldTypeName="File Drop Area" />
        <fieldType sitecoreFieldTypeName="Page Preview" umlFieldTypeName="Page Preview" />
        <fieldType sitecoreFieldTypeName="Rendering Datasource" umlFieldTypeName="Rendering Datasource" />
        <fieldType sitecoreFieldTypeName="Thumbnail" umlFieldTypeName="Thumbnail" />
        <fieldType sitecoreFieldTypeName="Security" umlFieldTypeName="Security" />
        <fieldType sitecoreFieldTypeName="UserList" umlFieldTypeName="UserList" />
      </fieldTypes>
    </sitecoreUML>	
  </sitecore>
</configuration>
